html, body {
  margin: 0;
  padding: 0;
  font-family: 'Roboto', sans-serif;
}

.header {
  background-color: #fff;
  height: 120px;
}

.container {
  width: 1024px;
  margin: 0 auto;
}

.nav {
  margin-top: 20px;
}


li {
  display: inline;
  margin-right: 20px;
  text-transform: capitalize;
}

li a{
  color: #000;
  font-weight: normal;
}

.jumbotron {
  height: 250px;
  background: url("http://www.freewebheaders.com/wordpress/wp-content/uploads/2013/12/cropped-web-header-2.jpg") no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.main-home h3 {
  font-weight: bold;
  text-align: right;
  color: #fff;
  text-shadow: 0.3px 0.3px 0.3px black!important;
  margin-right: 100px;
}

h3 span {
  background-color: rgba(255,255,255,0.7);
  color: #000;
  text-shadow: 0 0 0;
}

.main-home .btn:hover {
  background-color: rgba(255, 0, 255, 0.7);
  cursor: pointer;
}

.main-home .btn {
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 13px;
  border-radius: 0;
  margin-left: 200px;
  margin-right: 100px;
}

.style_btn {
  color: #fff;
}

.main {
  margin-bottom: 45px;
} 


.banner { position: relative; overflow: auto;}
.banner ul {padding: 0; list-style: none;}
.banner ul li { float: left; margin: 0; }

.banner .style_image {
  width: 50%; 
}

.thumbnail {
  border-radius: 0px;
  width: 80%;
  margin-left: 50px;
}

.main-about .thumbnail {
  border: 0;
  width: 100%;
  margin-left: 50px;
  padding: 0px;
}

.supporting {
  margin-bottom: 50px;
}

.main-contact {
  margin-bottom: 50px;
}

.main-contact .container h2{
margin-left: 740px;
}

.main-contact .container ul{
margin-left: 350px;
}

.footer ul {
  margin-right: 80px;
}

.footer li {
  display: inline-block;
  float: right;
  margin-left: 0px;
}

.footer p {
  float: right;
  margin-right: 100px;
  font-size: 12px;
}
